{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "node",
      "lodash",
      "tinymce",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@cps/*": [
        "src/components/*"
      ],
      "@ast/*": [
        "src/assets/*"
      ],
      "@lay/*": [
        "src/layout/*"
      ],
      "@str/*": [
        "src/store/*"
      ],
      "@vws/*": [
        "src/views/*"
      ],
      "@uts/*": [
        "src/utils/*"
      ],
      "@sty/*": [
        "src/styles/*"
      ],
      "@req/*": [
        "src/requests/*"
      ],
      "@aps/*": [
        "src/apis/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
